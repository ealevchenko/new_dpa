@using WebUI.App_GlobalResources;

<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="../favicon.ico">
    <link rel="stylesheet" type="text/css" href="~/Content/global.css" />
    <!--[if IE]>
        <link rel="stylesheet" type="text/css" href="css/styleIE.css" />
    <![endif]-->
    @RenderSection("styles", required: false)
</head>
@*<body style="background-image: url(../../Images/pattern.png), url(../../Images/ss-automation.jpg);">*@
<body>
    <div class="container">
        <div class="header">
            <a href='@Url.Action("Index", "Home", new { Area = "" })'>
                <strong>&laquo; Home: </strong>
            </a>
            <span class="right">
                @using (Html.BeginForm("ChangeCulture", "Home", new { area = "" }))
                {
                    @Html.RouteLink("RU", new
                   {
                       controller = "Home",
                       action = "ChangeCulture",
                       area = "",
                       lang = "ru"
                   }, new { @class = "ru-RU" == @GlobalResource.lang ? "select-lang" : "select-not-lang" })
                    @Html.RouteLink("EN", new
                   {
                       controller = "Home",
                       action = "ChangeCulture",
                       area = "",
                       lang = "en"
                   }, new { @class = "en-US" == @GlobalResource.lang ? "select-lang" : "select-not-lang" })
                }
                <a href="#" target="_blank">@GlobalResource.home_access</a>
                <a href="mailto:Eduard.Levchenko@arcelormittal.com">
                    <strong>@GlobalResource.home_questions_email</strong>
                </a>
            </span>
            <div class="clr"></div>
        </div>
        <h1>@ViewBag.section <span>@ViewBag.Title</span></h1>
        <div class="content">
            @RenderBody()
        </div>
    </div>
    <script type="text/javascript" src="~/Scripts/jquery-3.3.1.min.js"></script>
    @RenderSection("scripts", required: false)
</body>

</html>
