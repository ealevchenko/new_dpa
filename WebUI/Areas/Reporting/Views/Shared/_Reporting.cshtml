<!doctype html>
<html lang="ru">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <!-- Bootstrap Core CSS -->
    @Styles.Render("~/jquery-ui/css")
    @Styles.Render("~/bootstrap/css")

    <link rel="stylesheet" href="~/Content/Reporting/_reporting.css">
    @*@Scripts.Render("~/bundles/modernizr")*@

    <title>@ViewBag.Title</title>
    @RenderSection("styles", required: false)
</head>

<body>
    <div id="lockPanel" class="LockOff"></div>
    <nav class="navbar navbar-expand-sm bg-amkr navbar-amkr fixed-top" id="nav-global">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <img src="~/Images/amk_logo.png" width="200" height="40" class="d-inline-block align-top" alt="">
            </a>
            <div class="navbar-header">
                <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="collapsibleNavbar">
                    <ul class="nav navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href='@Url.Action("Index", "Home", new { area = "" })'>Номе</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href='@Url.Action("Index", "Home", new { area = "Reporting" })'>Отчетность</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>
    @*<div class="container-fluid">*@
        <header>
            <div class="header-content">
                @RenderBody()
            </div>
        </header>
    @*</div>*@

    <div class="jumbotron text-center" style="margin-bottom:0">
        <p>&copy; @DateTime.Now.Year ДАТП</p>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jquery-cookie")
    @Scripts.Render("~/bundles/jquery-ui")
    <!-- Bootstrap Core JavaScript -->
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
