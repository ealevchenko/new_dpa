<!doctype html>
@*<html lang="ru" class="no-js">*@
<html lang="ru">
<head>
    @*<meta charset="UTF-8">*@
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

    @Styles.Render("~/jquery-ui/css")
    @Styles.Render("~/bootstrap/css")


    <link href='http://fonts.googleapis.com/css?family=Ubuntu:300,400,700' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="~/Content/project/reset.css"> <!-- CSS reset -->
    <link rel="stylesheet" href="~/Content/project/global_project.css"> <!-- Resource style -->
    @Scripts.Render("~/bundles/modernizr")

    <title>@ViewBag.Title</title>
    @RenderSection("styles", required: false)
</head>
<body>
    <header class="cd-header">
        <div id="cd-logo"><a href="#0"><img src="~/Images/project/amk_logo.png" alt="Logo"></a></div>
        <nav class="cd-main-nav">
            <ul>
                <!-- inser more links here -->
                <li><a href='@Url.Action("Index", "Home", new { area = "" })'>Home</a></li>
                <li><a href='@Url.Action("Index", "Home", new { area = "Project" })'>Проекты</a></li>
                <li><a id="new-project" href='#'>Новый проект</a></li>
            </ul>
        </nav> <!-- cd-main-nav -->
    </header>
    @RenderBody()
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jquery-cookie")
    @Scripts.Render("~/bundles/jquery-ui")
    <!-- Bootstrap Core JavaScript -->
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
